{
  "name": "yearn-vaults",
  "private": true,
  "version": "0.4.3",
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*"
  ],
  "scripts": {
    "tsc": "npx tsc -b",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "test": "npx hardhat test",
    "lint": "npx gts lint",
    "clean": "npx gts clean",
    "fix": "npx gts fix",
    "format": "npx prettier --write 'contracts/**/*.sol' --verbose",
    "format:check": "npx prettier --check '**/*.*(sol|js)'",
    "format:fix": "npx pretty-quick --pattern '**/*.*(sol|js)' --staged --verbose",
    "hint": "npx solhint \"contracts/**/*.sol\""
  },
  "hooks": {
    "pre-commit": "npm run-script format:fix",
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
  },
  "keywords": [
    "solidity",
    "hardhat",
    "ethers",
    "typechain",
    "ethereum",
    "smart contracts",
    "defi"
  ],
  "author": "Yearn Finance Contributors",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@ethersproject/abi": "^5.4.1",
    "@ethersproject/bytes": "^5.4.0",
    "@ethersproject/providers": "^5.4.5",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@tenderly/hardhat-tenderly": "1.0.12",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "2.2.0",
    "@types/node": "^14.17.21",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "husky": "^7.0.0",
    "pretty-quick": "^3.1.1",
    "ctix": "^0.3.1",
    "dotenv": "10.0.0",
    "ethers": "5.4.1",
    "gts": "3.1.0",
    "hardhat": "^2.6.5",
    "prettier": "^2.4.1",
    "prettier-config-solidity": "1.5.2",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solc-0.6.12": "npm:solc@^0.6.12",
    "solhint": "^1.0.10",
    "solhint-config-prettier": "^0.0.2",
    "solidity-docgen": "^0.5.16",
    "ts-generator": "0.1.1",
    "ts-node": "^10.2.1",
    "typechain": "5.1.2",
    "typedoc": "^0.22.5",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.1.0"
  }
}
