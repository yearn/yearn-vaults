{
  "name": "yearn-vaults",
  "private": true,
  "version": "0.4.3",
  "directories": {
    "contracts": "contracts",
    "test": "tests"
  },
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json",
    "!/contracts/test/**/*",
    "!contracts/test/Token.sol"
  ],
  "bugs": {
    "url": "https://github.com/yearn/yearn-vaults/issues"
  },
  "homepage": "https://github.com/yearn/yearn-vaults#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yearn/yearn-vaults.git"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "format": "npx prettier --write 'contracts/**/*.sol' --verbose",
    "format:check": "npx prettier --check '**/*.*(sol|js)'",
    "format:fix": "npx pretty-quick --pattern '**/*.*(sol|js)' --staged --verbose",
    "hint": "npx solhint \"contracts/**/*.sol\""
  },
  "hooks": {
    "pre-commit": "npm run-script format:fix",
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
  },
  "keywords": [
    "solidity",
    "yield farming",
    "protocol",
    "vaults",
    "decentralized finance",
    "yearn",
    "yfi",
    "banteg",
    "ethereum",
    "smart contracts",
    "defi"
  ],
  "author": "Yearn Finance Contributors",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "husky": "^7.0.0",
    "prettier": "^2.4.1",
    "prettier-config-solidity": "1.5.2",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "pretty-quick": "^3.1.1",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "hardhat": "^2.6.5",
    "solc-0.6.12": "npm:solc@^0.6.12"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
